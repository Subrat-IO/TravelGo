<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WanderLust | Edit Listing</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-lg border-0 rounded-4">
          <div class="card-body p-5">
            <h3 class="card-title text-center mb-4 fw-bold">üìù Edit Your Listing</h3>

            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data">

              <!-- Title -->
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="title" name="listing[title]" placeholder="Title"
                  value="<%= listing.title %>" required />
                <label for="title">Title</label>
              </div>

              <!-- Description -->
              <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Description" id="description" name="listing[description]"
                  style="height: 100px" required><%= listing.description.trim() %></textarea>
                <label for="description">Description</label>
              </div>

              <!-- Current Image Preview (low quality) -->
              <div class="mb-3 text-center">
                <p class="fw-semibold">Current Image</p>
                <img src="<%= listing.image.url.replace('/upload/', '/upload/w_400,q_60/') %>" 
                  alt="Current Listing Image"
                  class="img-fluid rounded shadow-sm"
                  style="max-height: 250px; object-fit: cover;">
              </div>

              <!-- New Image Upload -->
              <div class="mb-3">
                <label for="image" class="form-label">Upload New Image</label>
                <input type="file" class="form-control" id="image" name="listing[image]" accept="image/*"
                  onchange="previewImage(event)" />
              </div>

              <!-- Live New Image Preview -->
              <div id="image-preview" class="mb-3 text-center" style="display: none;">
                <p class="fw-semibold">New Image Preview (compressed)</p>
                <img id="preview" class="img-fluid rounded shadow-sm"
                  style="max-height: 250px; object-fit: cover;">
              </div>

              <!-- Hidden Filename Input -->
              <input type="hidden" name="listing[image][filename]" value="<%= listing.image.filename %>" />

              <!-- Price -->
              <div class="form-floating mb-3">
                <input type="number" class="form-control" id="price" name="listing[price]" placeholder="Price"
                  value="<%= listing.price %>" required />
                <label for="price">Price (‚Çπ)</label>
              </div>

              <!-- Location -->
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="location" name="listing[location]" placeholder="Location"
                  value="<%= listing.location %>" required />
                <label for="location">Location</label>
              </div>

              <!-- Country -->
              <div class="form-floating mb-4">
                <input type="text" class="form-control" id="country" name="listing[country]" placeholder="Country"
                  value="<%= listing.country %>" required />
                <label for="country">Country</label>
              </div>

              <!-- Submit Button -->
              <div class="d-grid">
                <button class="btn btn-primary btn-lg rounded-pill" type="submit">
                  üíæ Save Changes
                </button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function previewImage(event) {
      const file = event.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function (e) {
        const img = new Image();
        img.src = e.target.result;

        img.onload = function () {
          const canvas = document.createElement('canvas');
          const ctx = canvas.getContext('2d');

          // Resize for preview
          const maxWidth = 400;
          const scale = maxWidth / img.width;
          canvas.width = maxWidth;
          canvas.height = img.height * scale;

          ctx.drawImage(img, 0, 0, canvas.width, canvas.height);

          // Compress to 60% quality JPEG
          document.getElementById('preview').src = canvas.toDataURL('image/jpeg', 0.6);
          document.getElementById('image-preview').style.display = 'block';
        };
      };
      reader.readAsDataURL(file);
    }
  </script>

</body>

</html>
