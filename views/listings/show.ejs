<% layout("layouts/boilerplate") %>

<div class="container py-5">
  <!-- Listing Details -->
  <div class="row justify-content-center mb-5">
    <div class="col-md-10 col-lg-8">
      <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" />
        <div class="card-body p-4">
          <h2 class="card-title fw-bold text-primary mb-2"><%= listing.title %></h2>
          <p class="mb-3 text-muted">
            <strong>Created by:</strong> <%= listing.owner?.username || "Unknown" %>
          </p>
          <ul class="list-group list-group-flush mb-4">
            <li class="list-group-item"><strong>Description:</strong> <%= listing.description %></li>
            <li class="list-group-item"><strong>Price:</strong> ‚Çπ<%= listing.price %></li>
            <li class="list-group-item"><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></li>
          </ul>

          <!-- Edit & Delete Buttons (Visible Only to Owner) -->
          <% if (currentUser && listing.owner && String(listing.owner._id) === String(currentUser._id)) { %>
            <div class="d-flex gap-2 mb-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary px-4 rounded-pill">‚úèÔ∏è Edit</a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-outline-danger px-4 rounded-pill"
                  onclick="return confirm('Are you sure you want to delete this listing?')">üóëÔ∏è Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Review Form (Conditional) -->
  <% if (currentUser) { %>
    <div class="row justify-content-center mb-5">
      <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm border-0 rounded-4 p-4">
          <h4 class="fw-bold text-secondary mb-4">Leave a Review</h4>
          <form id="reviewForm" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>
            <div class="mb-3">
              <label for="rating" class="form-label">Rating: <span id="rating-value" class="fw-bold">3</span></label>
              <input type="range" min="1" max="5" step="1" name="review[rating]" class="form-range" id="rating" required>
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea name="review[comment]" id="comment" class="form-control rounded-3" rows="4"
                placeholder="Write your thoughts..." required minlength="10"></textarea>
              <div class="invalid-feedback">Please write at least 10 characters.</div>
            </div>
            <button type="submit" class="btn btn-primary rounded-pill px-4">Submit Review</button>
          </form>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="text-center my-4">
      <a href="/login" class="btn btn-outline-primary rounded-pill px-4">
        Login to leave a review
      </a>
    </div>
  <% } %>

  <!-- All Reviews -->
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <hr class="mb-5">
      <h4 class="text-center text-dark fw-bold mb-4">All Reviews</h4>
      <div class="row g-4">
        <% if (listing.reviews.length === 0) { %>
          <div class="text-center text-muted">No reviews yet. Be the first to leave one!</div>
        <% } %>

        <% for (let review of listing.reviews) { %>
          <div class="col-12">
            <div class="card h-100 border-0 shadow-sm rounded-4">
              <div class="card-body d-flex flex-column justify-content-between">
                <div>
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                      <h6 class="mb-0 fw-semibold">
                        <%= review.author?.username || "Anonymous" %>
                      </h6>
                      <small class="text-muted">
                        <%= new Date(review.createdAt).toLocaleDateString('en-IN', {
                          day: 'numeric', month: 'short', year: 'numeric'
                        }) %>
                      </small>
                    </div>
                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                      ‚òÖ <%= review.rating %>/5
                    </span>
                  </div>
                  <p class="text-muted mt-2 mb-3"><%= review.comment %></p>

                  <!-- Always show Delete Review Button -->
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                        method="POST" class="d-inline">
                    <button class="btn btn-sm btn-outline-danger rounded-pill"
                            onclick="return confirm('Delete this review?')">üóëÔ∏è Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Rating Slider & Comment Validation Script -->
<script>
  const ratingSlider = document.getElementById("rating");
  const ratingValue = document.getElementById("rating-value");
  const commentField = document.getElementById("comment");
  const form = document.getElementById("reviewForm");

  if (ratingSlider) {
    ratingSlider.addEventListener("input", () => {
      ratingValue.textContent = ratingSlider.value;
    });
  }

  if (form) {
    form.addEventListener("submit", (e) => {
      if (commentField.value.trim().length < 10) {
        commentField.classList.add("is-invalid");
        e.preventDefault();
      } else {
        commentField.classList.remove("is-invalid");
      }
    });
  }
</script>
