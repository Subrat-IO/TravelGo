<% layout("layouts/boilerplate") %>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg rounded-4">
          <img src="<%= listing.image.url %>" class="card-img-top rounded-top-4" alt="<%= listing.title %> image" />
          <div class="card-body">
            <h3 class="card-title fw-bold listing-show-heading">
              <%= listing.title %>
            </h3>
            <ul class="list-group listing-show-details mb-4">
              <li class="list-group-item listing-show-item"><strong>Description:</strong>
                <%= listing.description %>
              </li>
              <li class="list-group-item listing-show-item"><strong>Price:</strong> ‚Çπ<%= listing.price %>
              </li>
              <li class="list-group-item listing-show-item"><strong>Location:</strong>
                <%= listing.location %>, <%= listing.country %>
              </li>
            </ul>

            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary listing-show-edit-btn">‚úèÔ∏è Edit</a>

            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST"
              class="d-inline listing-show-delete-form">
              <button class="btn btn-danger listing-show-delete-btn"
                onclick="return confirm('Are you sure you want to delete this listing?')">
                üóëÔ∏è Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-8 offset-lg-2 mt-5">
    <div class="card shadow-sm rounded-4 border-0">
      <div class="card-body p-5">
        <h4 class="mb-4 text-center text-primary fw-semibold">Leave A Review</h4>

        <form id="reviewForm" action="/listings/<%= listing.id %>/reviews" method="POST" novalidate>
          <!-- Rating input -->
          <div class="mb-4">
            <label for="rating" class="form-label">Rating:
              <span id="rating-value" class="fw-bold text-dark">3</span>
            </label>
            <input type="range" min="1" max="5" step="1" name="review[rating]" class="form-range" id="rating" required>
            <div class="form-text text-muted">Rate between 1 (low) to 5 (high)</div>
          </div>

          <!-- Comment textarea -->
          <div class="mb-4">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" class="form-control rounded-3 shadow-sm" rows="5"
              placeholder="Write your thoughts..." required minlength="10"></textarea>
            <div class="invalid-feedback">Please write at least 10 characters.</div>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow-sm">Submit Review</button>
          </div>
        </form>

        <hr class="my-5">

        <h4 class="mb-4 text-center text-dark fw-bold">All Reviews</h4>

        <div class="row row-cols-1 g-4">
          <% for (let review of listing.reviews) { %>
            <div class="col">
              <div class="card border-0 shadow-sm rounded-4 p-3 h-100">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-2">
                    <div class="flex-grow-1">
                      <h6 class="mb-0 fw-semibold">
                        <%= review.author?.username || "Anonymous" %>
                      </h6>
                      <small class="text-muted">
                        <%= new Date(review.createdAt).toLocaleDateString('en-IN', { day: 'numeric' , month: 'short' ,
                          year: 'numeric' }) %>
                      </small>
                    </div>
                    <div class="ms-3">
                      <span class="badge bg-warning text-dark px-3 py-2 rounded-pill shadow-sm">
                        ‚òÖ <%= review.rating %>/5
                      </span>
                    </div>
                  </div>
                  <p class="card-text text-muted mt-2">
                    <%= review.comment %>
                  </p>
                </div>
              </div>
            </div>
            <% } %>
        </div>
        <% for (let review of listing.reviews) { %>
          <div class="mb-3">
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
          <% } %>
      </div>
    </div>
  </div>

  <!-- Validation & slider script -->
  <script>
    // Update slider value display
    const ratingSlider = document.getElementById("rating");
    const ratingValue = document.getElementById("rating-value");
    ratingSlider.addEventListener("input", () => {
      ratingValue.textContent = ratingSlider.value;
    });

    // Form validation
    const form = document.getElementById("reviewForm");
    const commentField = document.getElementById("comment");

    form.addEventListener("submit", function (event) {
      if (commentField.value.trim().length < 10) {
        commentField.classList.add("is-invalid");
        event.preventDefault();
        event.stopPropagation();
      } else {
        commentField.classList.remove("is-invalid");
      }
    });
  </script>