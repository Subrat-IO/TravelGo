<% layout("layouts/boilerplate") %>
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show fw-semibold text-center" role="alert">
      <%= success[0] %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>
<div class="container py-5">
  <h3 class="text-center mb-4 display-6 fw-bold">üåç Explore Your Destination</h3>



  <div class="row g-4 justify-content-center">
    <% for (let listing of allListing) { %>
      <div class="col-md-4 col-lg-3 d-flex">
        <div class="card shadow-sm rounded-4 w-100">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top rounded-top-4"
            alt="<%= listing.title %>"
            style="height: 200px; object-fit: cover;"
          />
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-semibold text-primary"><%= listing.title %></h5>
            <p class="card-text text-muted small mb-2">
              <%= listing.location %>, <%= listing.country %>
            </p>
            <p class="card-text text-dark fw-semibold mb-3">‚Çπ<%= listing.price.toLocaleString("en-IN") %></p>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary mt-auto">View Details</a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>
