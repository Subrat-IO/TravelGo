<!-- Navbar -->
<nav class="navbar navbar-expand-md navbar-dark shadow-sm sticky-top custom-navbar">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
      <i class='bx bx-compass bx-md text-light'></i>
      <span class="fw-bold">TravelGo</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
      <div class="navbar-nav align-items-center">
        <a class="nav-link px-3" href="/">Home</a>
        <a class="nav-link px-3" href="/listings">All Listings</a>
        <a class="nav-link px-3" href="/listings/new">New Listing</a>

        <!-- Auth Buttons -->
        <div class="d-flex ms-3">
          <% if (!currentUser) { %>
            <!-- Show Login & Signup if not logged in -->
            <a href="/login" class="btn btn-outline-light fw-semibold me-2 hover-glow">
              <i class='bx bx-log-in me-1'></i> Login
            </a>
            <a href="/signup" class="btn btn-light fw-semibold hover-glow">
              <i class='bx bx-user-plus me-1'></i> Sign Up
            </a>
          <% } else { %>
            <!-- Show Logout if logged in -->
            <form action="/logout" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger fw-semibold hover-glow">
                <i class='bx bx-log-out me-1'></i> Logout
              </button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Custom Styles -->
<style>
  /* Gradient Navbar */
  .custom-navbar {
    background: linear-gradient(135deg, #ff4e50, #f9d423);
    transition: background 0.4s ease-in-out;
  }

  .navbar-nav .nav-link {
    color: #fff;
    font-weight: 500;
    transition: color 0.3s, transform 0.3s;
  }

  /* Hover animation on nav links */
  .navbar-nav .nav-link:hover {
    color: #ffe082;
    transform: translateY(-2px);
  }

  /* Button hover glow */
  .hover-glow {
    transition: all 0.3s ease-in-out;
  }

  .hover-glow:hover {
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
  }

  /* Smooth collapse animation */
  .navbar-collapse {
    transition: all 0.4s ease-in-out;
  }
</style>

<!-- Bootstrap JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
